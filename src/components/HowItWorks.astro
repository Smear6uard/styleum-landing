---
// HowItWorks.astro - Clean timeline section
const steps = [
  {
    time: '9:00 AM',
    title: 'Open app',
    description: 'Your picks are ready',
  },
  {
    time: '9:01 AM',
    title: 'Pick a look',
    description: 'Swipe through options',
  },
  {
    time: '9:02 AM',
    title: 'Get dressed',
    description: 'Done. Go live your life.',
  },
];
---

<section id="how-it-works" class="relative z-40 -mt-16">
  <div class="bg-white rounded-t-[3rem] pt-24 pb-32 shadow-[0_-10px_60px_rgba(0,0,0,0.08)]">
    <div class="max-w-5xl mx-auto px-6">

      <!-- Section Header -->
      <div class="text-center mb-20">
        <p class="text-xs uppercase tracking-[0.2em] text-[#6F7C86] font-semibold mb-4">
          How it works
        </p>
        <h2 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-[-0.02em] text-[#111111]">
          Pick. Wear. Done.
        </h2>
      </div>

      <!-- Timeline Grid -->
      <div class="grid md:grid-cols-3 gap-8 md:gap-12">
        {steps.map((step, i) => (
          <div class="text-center md:text-left">
            <!-- Time Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#F5F5F3] rounded-full mb-4">
              <span class="text-sm font-bold text-[#6F7C86]">{step.time}</span>
            </div>

            <!-- Title -->
            <h3 class="font-display text-xl sm:text-2xl font-semibold text-[#111111] mb-2">
              {step.title}
            </h3>

            <!-- Description -->
            <p class="text-[#6B7280] text-base">
              {step.description}
            </p>
          </div>
        ))}
      </div>

    </div>
  </div>
</section>
