---
const links = [
  { label: 'Privacy', href: '/privacy' },
  { label: 'Terms', href: '/terms' },
  { label: 'Contact', href: 'mailto:hello@styleum.app' },
  { label: 'Instagram', href: 'https://instagram.com/styleum' },
  { label: 'TikTok', href: 'https://tiktok.com/@styleum' },
];
---

<footer class="py-12 bg-[#111111] border-t border-white/10">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-4">
        <span class="text-white font-display font-bold">Styleum</span>
        <span class="text-[#9AA3AA] text-sm">&copy; 2026</span>
      </div>

      <nav class="flex flex-wrap items-center justify-center gap-6 text-sm text-[#9AA3AA]">
        {links.map((link) => (
          <a
            href={link.href}
            class="hover:text-white transition"
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</footer>
