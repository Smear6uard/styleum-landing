---
// Opt out of pre-rendering - this page is SSR
export const prerender = false;

import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
const API_BASE = 'https://styleum-api-production.up.railway.app';
const APP_STORE_URL = 'https://apps.apple.com/app/styleum/id123456789'; // Update with real App Store ID

// Fetch outfit data from public API
let outfit = null;
let items: any[] = [];
let error = false;

try {
  const response = await fetch(`${API_BASE}/api/public/outfits/${id}`);

  if (!response.ok) {
    error = true;
  } else {
    const data = await response.json();
    outfit = data.outfit;
    items = data.items || [];
  }
} catch (e) {
  console.error('Failed to fetch outfit:', e);
  error = true;
}

// SEO/OG data
const ogImage = items[0]?.image_url || '/og-image.png';
const pageTitle = outfit?.name ? `${outfit.name} | Styleum` : 'Outfit | Styleum';
const pageDescription = outfit?.vibe || 'Check out this outfit styled with Styleum';
---

<Layout
  title={pageTitle}
  description={pageDescription}
  image={ogImage}
>
  {error ? (
    <!-- 404 State -->
    <main class="min-h-screen flex flex-col items-center justify-center text-center px-6 bg-light">
      <h1 class="font-display text-2xl font-semibold text-dark mb-2">Outfit not found</h1>
      <p class="text-dark/60 mb-6">This outfit may have been removed or the link is invalid.</p>
      <a href="/" class="font-medium text-dark hover:underline">
        Go to Styleum &rarr;
      </a>
    </main>
  ) : (
    <!-- Outfit Page -->
    <main class="min-h-screen bg-light">
      <!-- Header -->
      <header class="py-6 text-center">
        <a href="/" class="font-display text-2xl font-medium text-dark">styleum</a>
      </header>

      <!-- Content -->
      <div class="max-w-md mx-auto px-6 pb-12">
        <!-- Items Grid -->
        <div class:list={[
          "grid gap-4 mb-10",
          items.length === 1 && "grid-cols-1 max-w-[200px] mx-auto",
          items.length === 2 && "grid-cols-2",
          items.length >= 3 && "grid-cols-2"
        ]}>
          {items.slice(0, 4).map((item) => (
            <div class="flex flex-col items-center text-center">
              <div class="w-full aspect-square bg-white rounded-lg shadow-sm overflow-hidden mb-3">
                <img
                  src={item.image_url}
                  alt={item.name || 'Item'}
                  class="w-full h-full object-contain"
                  loading="lazy"
                />
              </div>
              <span class="text-sm font-medium text-dark">{item.name || item.category}</span>
              <span class="text-xs text-dark/50 capitalize">{item.category}</span>
            </div>
          ))}
        </div>

        <!-- Outfit Info -->
        <div class="text-center mb-10">
          <h1 class="font-display text-3xl font-semibold text-dark mb-4">
            {outfit?.name || "Today's Look"}
          </h1>

          <!-- Style Score -->
          <div class="inline-flex items-baseline gap-2 mb-4">
            <span class="font-display text-5xl font-bold text-dark">
              {outfit?.style_score || 0}
            </span>
            <span class="text-xs font-semibold text-dark/60 leading-tight text-left">
              STYLE<br/>SCORE
            </span>
          </div>

          {outfit?.vibe && (
            <p class="inline-block text-sm text-dark/60 px-4 py-2 bg-dark/5 rounded-full">
              {outfit.vibe}
            </p>
          )}
        </div>

        <!-- CTA -->
        <div class="text-center">
          <a
            href={APP_STORE_URL}
            class="inline-flex items-center gap-3 px-8 py-4 bg-dark text-light font-semibold text-lg rounded-xl hover:-translate-y-0.5 hover:shadow-lg transition-all"
          >
            Get your daily outfits
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>

          <p class="mt-3 text-sm text-dark/50">Free on the App Store</p>
        </div>
      </div>

      <!-- Footer -->
      <footer class="py-6 text-center text-dark/40 text-sm">
        #StyledWithStyleum
      </footer>
    </main>
  )}
</Layout>

<!-- Override OG tags for this specific page -->
<Fragment slot="head">
  <meta property="og:title" content={`${outfit?.name || 'Outfit'} - ${outfit?.style_score || 0} Style Score`} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:url" content={`https://styleum.xyz/o/${id}`} />
  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content={ogImage} />
</Fragment>
